/**
 * @see https://www.electron.build/configuration/configuration
 */
{
  "appId": "com.kylin.gostx",
  "asar": true,
  "directories": {
    "output": "release/${version}"
  },
  "files": [
    "dist",
    "dist-electron"
  ],
  "mac": {
    "icon": "src/assets/icons/icon.icns",
    "artifactName": "${productName}_${version}_mac_${arch}.${ext}",
    "category": "public.app-category.system",
    "target": [
      {
        "target": "dmg",
        "arch": [
          "x64",
          "arm64"
        ]
      },
    ]
  },
  "win": {
    "icon": "src/assets/icons/icon.ico",
    "artifactName": "${productName}_${version}_windows_${arch}.${ext}",
    "target": [
      {
        "target": "nsis",
        "arch": [
          "ia32",
          "x64"
        ],
      },
      {
        "target": "msi",
        "arch": [
          "ia32",
          "x64"
          ],
        },
      {
        "target": "portable",
        "arch": [
          "ia32",
          "x64"
        ],
      }
    ],
  },
  "linux": {
    "icon": "src/assets/icons/",
    "artifactName": "${productName}_${version}_linux_${arch}.${ext}",
    "category": "public.app-category.system",
    "target": [
      'AppImage',
      'snap',
      'deb',
      'rpm',
      'tar.gz',
    ],
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false
  }
}